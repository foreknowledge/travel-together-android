<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge" >
		<item name="colorPrimaryDark">@android:color/transparent</item>
		<item name="colorAccent">@color/colorSecondary</item>
		<item name="colorControlNormal">@color/colorBackDark</item>
		<item name="android:windowLightStatusBar">true</item>
	</style>

	<style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge" >
		<item name="colorPrimaryDark">@color/colorPrimary</item>
		<item name="android:windowBackground">@drawable/splash_background</item>
	</style>

	<style name="AppThemeDark" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
		<item name="colorPrimaryDark">@color/colorGray</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
		<item name="android:textSize">16sp</item>
		<item name="android:fontStyle">normal</item>
	</style>

	<style name="chip_text_style">
		<item name="android:textSize">14sp</item>
	</style>

	<style name="settings_btn_items">
		<item name="android:drawableEnd">@drawable/ic_keyboard_arrow_right_black_24dp</item>
		<item name="android:padding">12dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/colorGray</item>
		<item name="android:textSize">18sp</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="schedule_radio_button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingStart">40dp</item>
		<item name="android:paddingEnd">40dp</item>
		<item name="android:button">@android:color/transparent</item>
		<item name="android:textSize">18sp</item>
		<item name="android:background">@drawable/dr_schedule_selector</item>
	</style>
</resources>