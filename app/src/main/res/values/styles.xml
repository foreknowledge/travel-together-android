<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="android:fontStyle">normal</item>
    </style>

    <style name="chip_text_style">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="profile_tag_style">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/dr_tag_rounded</item>
    </style>

    <style name="settings_btn_items">
        <item name="android:drawableEnd">@drawable/ic_keyboard_arrow_right_black_24dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>