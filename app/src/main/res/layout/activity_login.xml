<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBack"
    tools:context=".Activity.LoginActivity">

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_go_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:fontFamily="@font/dxkyungpil"
            android:text="@string/login_kor"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/dxkyungpil"
            android:inputType="textEmailAddress"
            android:hint="@string/email_kor"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/input_pwd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/dxkyungpil"
            android:inputType="textPassword"
            android:hint="@string/password_kor"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/btn_forgot_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_gravity="end"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/dxkyungpil"
            android:text="@string/forgot_password"
            android:textSize="13sp"
            android:textColor="@color/colorGray"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/dxkyungpil"
            android:text="@string/login_kor"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/dr_btn_cornered" />

        <Button
            android:id="@+id/btn_kakao_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/dxkyungpil"
            android:text="@string/kakao_login_kor"
            android:textColor="@color/kakao_front"
            android:paddingStart="30dp"
            android:paddingEnd="0dp"
            android:background="@drawable/login_for_kakao" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_go_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/dxkyungpil"
        android:text="@string/go_sign_up"
        android:textColor="@color/colorGray"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>